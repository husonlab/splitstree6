<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="splitstree6.xtra.genetreeview.GeneTreeViewController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox fx:id="topPane" BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar fx:id="menuBar">
                            <menus>
                                <Menu mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                            </accelerator>
                                        </MenuItem>
                              <Menu fx:id="openRecentMenu" mnemonicParsing="false" text="Open Recent" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="importGeneNamesMenuItem" mnemonicParsing="false" text="Import Gene Names" />
                              <MenuItem fx:id="importFeatureMenuItem" mnemonicParsing="false" text="Import Feature" />
                              <MenuItem fx:id="exportSubsetMenuItem" mnemonicParsing="false" text="Export Selected Trees" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="printMenuItem" mnemonicParsing="false" text="Print...">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="P" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                              <SeparatorMenuItem mnemonicParsing="false" />
                                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Edit">
                           <items>
                              <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                              <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="copyTaxaMenuItem" mnemonicParsing="false" text="Copy Taxa">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                              <MenuItem fx:id="copyImageMenuItem" mnemonicParsing="false" text="Copy Image">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                                 </accelerator></MenuItem>
                              <Menu mnemonicParsing="false" text="Copy Selected Trees">
                                <items>
                                  <MenuItem fx:id="copySelectedNewicksMenuItem" mnemonicParsing="false" text="in Newick format" />
                                    <MenuItem fx:id="copySelectedTreesMenuItem" mnemonicParsing="false" text="as Image" />
                                </items>
                              </Menu>
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="pasteMenuItem" mnemonicParsing="false" text="Paste Newick Trees">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="V" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                              <MenuItem fx:id="deleteSelectedMenuItem" mnemonicParsing="false" text="Delete Selected Trees" />
                           </items></Menu>
                        <Menu mnemonicParsing="false" text="Selection">
                          <items>
                            <MenuItem fx:id="selectAllMenuItem" disable="true" mnemonicParsing="false" text="Select All Trees">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator></MenuItem>
                              <MenuItem fx:id="selectNoneMenuItem" disable="true" mnemonicParsing="false" text="Select No Trees">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                                 </accelerator></MenuItem>
                              <MenuItem fx:id="selectInverseMenuItem" disable="true" mnemonicParsing="false" text="Inverse Tree Selection">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="I" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator></MenuItem>
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="selectAllTaxaMenuItem" mnemonicParsing="false" text="Select All Taxa" />
                              <MenuItem fx:id="selectNoTaxaMenuItem" mnemonicParsing="false" text="Select No Taxa" />
                              <MenuItem fx:id="selectInverseTaxaMenuItem" mnemonicParsing="false" text="Inverse Taxa Selection" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Layout">
                          <items>
                              <RadioMenuItem fx:id="stackMenuItem" mnemonicParsing="false" selected="true" text="Stack">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="layoutGroup" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <RadioMenuItem fx:id="carouselMenuItem" mnemonicParsing="false" text="Carousel" toggleGroup="$layoutGroup" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <RadioMenuItem fx:id="defaultOrderMenuItem" mnemonicParsing="false" selected="true" text="Tree Order As Imported">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="orderGroup" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <Menu fx:id="taxonOrderSubMenu" disable="true" mnemonicParsing="false" text="Tree Order As In Genome" />
                              <Menu fx:id="similarityOrderSubMenu" mnemonicParsing="false" text="Tree Order By Similarity" />
                              <Menu fx:id="featureOrderSubMenu" disable="true" mnemonicParsing="false" text="Tree Order By Feature" />
                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="View">
                           <items>
                              <RadioMenuItem fx:id="rectangularCladoMenuItem" mnemonicParsing="false" selected="true" text="Rectangular Cladogram">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="treeLayoutGroup" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <RadioMenuItem fx:id="rectangularPhyloMenuItem" mnemonicParsing="false" text="Rectangular Phylogram" toggleGroup="$treeLayoutGroup" />
                              <RadioMenuItem fx:id="triangularCladoMenuItem" mnemonicParsing="false" text="Triangular Cladogram" toggleGroup="$treeLayoutGroup" />
                              <RadioMenuItem fx:id="radialCladoMenuItem" mnemonicParsing="false" text="Radial Cladogram" toggleGroup="$treeLayoutGroup" />
                              <RadioMenuItem fx:id="radialPhyloMenuItem" mnemonicParsing="false" text="Radial Phylogram" toggleGroup="$treeLayoutGroup" />
                              <RadioMenuItem fx:id="circularCladoMenuItem" mnemonicParsing="false" text="Circular Cladogram" toggleGroup="$treeLayoutGroup" />
                              <RadioMenuItem fx:id="circularPhyloMenuItem" mnemonicParsing="false" text="Circular Phylogram" toggleGroup="$treeLayoutGroup" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <RadioMenuItem fx:id="noColoringMenuItem" mnemonicParsing="false" selected="true" text="No Coloring">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="coloringGroup" />
                                 </toggleGroup>
                              </RadioMenuItem>
                              <RadioMenuItem fx:id="monophyleticColoringMenuItem" mnemonicParsing="false" text="Monophyletic Selection Coloring" toggleGroup="$coloringGroup" />
                              <Menu fx:id="similarityColoringSubMenu" mnemonicParsing="false" text="Coloring By Similarity" />
                              <Menu fx:id="featureColoringSubMenu" disable="true" mnemonicParsing="false" text="Coloring By Feature Values" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="featureOverviewMenuItem" disable="true" mnemonicParsing="false" text="Feature Overview" />
                           </items>
                        </Menu>
                                <Menu mnemonicParsing="false" text="Help">
                           <items>
                              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About...">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="H" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                                 </accelerator>
                              </MenuItem>
                           </items></Menu>
                            </menus>
                        </MenuBar>
                        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="200.0">
                     <items>
                        <Label text="-" />
                        <Slider fx:id="zoomSlider" blockIncrement="0.1" disable="true" majorTickUnit="0.1" max="10.0" min="1.0" minorTickCount="1" value="0.1" />
                        <Label text="+" />
                        <Separator orientation="VERTICAL" />
                        <ComboBox fx:id="searchGeneComboBox" disable="true" editable="true" promptText="search a gene" />
                     </items></ToolBar>
                    </children>
                </VBox>
            </top>
            <center>
                <StackPane BorderPane.alignment="CENTER">
               <children>
                  <Pane fx:id="centerPane">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin></Pane>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding></StackPane>
            </center>
         <bottom>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <BorderPane>
                     <left>
                        <Button fx:id="previousButton" disable="true" mnemonicParsing="false" text="&lt;" BorderPane.alignment="CENTER" />
                     </left>
                     <right>
                        <Button fx:id="nextButton" disable="true" mnemonicParsing="false" text="&gt;" BorderPane.alignment="CENTER" />
                     </right>
                     <center>
                        <VBox fx:id="vBox" BorderPane.alignment="CENTER">
                           <children>
                              <HBox prefHeight="14.0" visible="false" />
                              <Slider fx:id="slider" blockIncrement="1.0" disable="true" majorTickUnit="10.0" minorTickCount="1" />
                           </children>
                        </VBox>
                     </center>
                  </BorderPane>
                  <FlowPane>
                     <children>
                              <Label fx:id="label" text="Label" />
                        <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false">
                           <FlowPane.margin>
                              <Insets left="10.0" />
                           </FlowPane.margin>
                        </ProgressBar>
                        <Label fx:id="progressLabel" />
                     </children>
                  </FlowPane>
               </children>
            </VBox>
         </bottom>
        </BorderPane>
    </children>
</AnchorPane>
